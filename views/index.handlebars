<h1>Eat-Da-Burger!</h1>

<main>
    <div class="container">
            <div class = "row">
            <div class="col-md-6" class="task">
            <h3 id="available">Available</h3>
            <ul>
			  {{#each burgers}}
			  	{{#unless this.devoured}}
                    {{> burger-block devoured=false}}
				{{/unless}}
			  {{/each}}
              </ul>
			</div>

		<div class="col-md-6" class="task">
            <h3 id="devoured">Devoured</h3>
                <ul>
			        {{#each burgers}}
			  	        {{#if this.devoured}}
                            {{> burger-block devoured=true}}
				        {{/if}}
			        {{/each}}
                </ul>
		    </div>
        </div>
    </div>


<h3 class="addHeader">Add a Burger</h3>

<div class = "row">
    <div class = "col s12">
        <form action = "/burgers" method="POST">
            <input type="text" id="name" name="burger_name" placeholder="Cheeseburger">
            <button type="submit" class="addBurger">Add</button>
        </form>
    </div>
</div>
</main>
