<h1>Eat-Da-Burger!</h1>

<main>
    <div class = "container">
        <div class = "row">
            <div class = "col s6">
                <h3 id="available">Available</h3>
                {{#each burgers}}
                {{#unless this.devoured}}
                    <div>
                        <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                            <button type="submit" class="devourBtn">{{this.burger_name}}</button>
                        </form>
                    </div>
                {{/unless}}
                {{/each}}
            </div>

            <div class = "col s6">
                <h3 id="devoured">Devoured</h3>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <div class = 'burgerEaten'>
                            <div>
                                {{this.burger_name}}
                            </div>
                         </div>
                    {{/if}}
                    {{/each}}
            </div>
        </div>
    </div>
</main>

<h3>Add a Burger</h3>

<div class = "row">
    <div class = "col s12">
        <form action = "/burgers" method="POST">
            <input type="text" id="name" name="burger_name" placeholder="Cheeseburger">
            <button type="submit" class="addBurger">Add</button>
        </form>
    </div>
</div>
